<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffeeeeee"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/len_172"
                android:background="@color/burlywood"
                >


                <com.cainiao.common.widget.circleimage.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:src="@color/salmon"
                    android:layout_marginTop="@dimen/len_10"
                    android:layout_marginBottom="@dimen/len_6"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/tv_username"
                    android:layout_width="@dimen/len_60"
                    android:layout_height="@dimen/len_60"/>


                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ll_my"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="10"
                    android:layout_marginBottom="@dimen/len_16"
                    android:singleLine="true"
                    android:text="@string/mine_login_immediately"
                    android:textColor="@color/white"
                    android:textSize="16.0sp"
                   />


                <LinearLayout
                    android:id="@+id/ll_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ll_my"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="@dimen/len_10"
                    android:gravity="center"
                    android:orientation="horizontal"
                   >

                    <ImageView
                        android:id="@+id/iv_sign_icon"
                        android:layout_width="28.0dip"
                        android:layout_height="28.0dip"
                        android:layout_margin="6.0dip"
                        android:layout_marginRight="10.0dip"
                        android:background="@drawable/mycenter_sign_in"/>

                    <TextView
                        android:id="@+id/tv_signin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_my_sign"
                        android:textColor="@color/white"
                        android:textSize="13.0sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/len_72"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/my_order"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="21.0dip"
                            android:layout_height="23.0dip"
                            android:layout_marginTop="2.0dip"
                            android:src="@drawable/mycenter_order"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.0dip"
                            android:text="@string/mine_my_order"
                            android:textColor="@color/white"
                            android:textSize="12.0sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_services"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="23.0dip"
                            android:layout_height="23.0dip"
                            android:layout_marginTop="2.0dip"
                            android:src="@drawable/mycenter_service"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.0dip"
                            android:text="@string/mine_my_service"
                            android:textColor="@color/white"
                            android:textSize="12.0sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_ticket"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25.0dip"
                            android:layout_height="23.0dip"
                            android:layout_marginTop="2.0dip"
                            android:src="@drawable/mycenter_ticket"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.0dip"
                            android:text="@string/mine_my_card"
                            android:textColor="@color/white"
                            android:textSize="12.0sp"/>
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>



            <LinearLayout
                android:id="@+id/ll_friend_circle"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/len_50"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/len_20"
                android:layout_marginTop="@dimen/len_8"
                android:paddingRight="@dimen/len_20">

                <ImageView
                    android:layout_width="@dimen/len_24"
                    android:layout_height="@dimen/len_24"
                    android:background="@drawable/mycenter_health_record"/>

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="@string/mine_my_friend_circle"
                    android:textColor="@color/lightslategrey"
                    android:textSize="@dimen/font_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mycenter_arrous"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_collect"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/len_50"
                android:layout_marginTop="8.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/len_20"
                android:paddingRight="@dimen/len_20">

                <ImageView
                    android:layout_width="@dimen/len_24"
                    android:layout_height="@dimen/len_24"
                    android:background="@drawable/mycenter_collection"/>

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="@string/mine_my_collect"
                    android:textColor="@color/lightslategrey"
                    android:textSize="@dimen/font_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mycenter_arrous"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_device"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/len_50"
                android:layout_marginTop="0.8000001dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/len_20"
                android:paddingRight="@dimen/len_20">

                <ImageView
                    android:layout_width="@dimen/len_24"
                    android:layout_height="@dimen/len_24"
                    android:background="@drawable/mycenter_device"/>

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="@string/mine_my_equipment"
                    android:textColor="@color/lightslategrey"
                    android:textSize="@dimen/font_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mycenter_arrous"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_address"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/len_50"
                android:layout_marginTop="0.8000001dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/len_20"
                android:paddingRight="@dimen/len_20">

                <ImageView
                    android:layout_width="@dimen/len_24"
                    android:layout_height="@dimen/len_24"
                    android:background="@drawable/mycenter_address"/>

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="@string/mine_my_address"
                    android:textColor="@color/lightslategrey"
                    android:textSize="@dimen/font_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mycenter_arrous"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_gift"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/len_50"
                android:layout_marginTop="0.8000001dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/len_20"
                android:paddingRight="@dimen/len_20"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:background="@drawable/mycenter_gift"/>

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="@string/mine_gif"
                    android:textColor="@color/lightslategrey"
                    android:textSize="@dimen/font_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mycenter_arrous"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_help_feedback"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/len_50"
                android:layout_marginTop="8.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/len_20"
                android:paddingRight="@dimen/len_20">

                <ImageView
                    android:layout_width="@dimen/len_24"
                    android:layout_height="@dimen/len_24"
                    android:background="@drawable/mycenter_help_feedback"/>

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="@string/mine_help_and_feedback"
                    android:textColor="@color/lightslategrey"
                    android:textSize="@dimen/font_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mycenter_arrous"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_set"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/len_50"
                android:layout_marginTop="0.8000001dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/len_20"
                android:paddingRight="@dimen/len_20">

                <ImageView
                    android:layout_width="@dimen/len_24"
                    android:layout_height="@dimen/len_24"
                    android:background="@drawable/mycenter_set"/>

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="@string/mine_setting"
                    android:textColor="@color/lightslategrey"
                    android:textSize="@dimen/font_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mycenter_arrous"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/len_50"
                android:layout_marginTop="0.8000001dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/len_20"
                android:paddingRight="@dimen/len_20">

                <ImageView
                    android:layout_width="@dimen/len_24"
                    android:layout_height="@dimen/len_24"
                    android:background="@drawable/mycenter_share_icon"/>

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="@string/mine_invite_friends"
                    android:textColor="@color/lightslategrey"
                    android:textSize="@dimen/font_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mycenter_arrous"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_100"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>