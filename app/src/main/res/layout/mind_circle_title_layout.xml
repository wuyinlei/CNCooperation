<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/action_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/action_mindcirrcle_message"
        android:layout_width="@dimen/len_56"
        android:layout_height="@dimen/len_56"
        >

        <ImageView
            android:id="@+id/action_mindcircle_view"
            android:layout_width="@dimen/len_24"
            android:layout_height="@dimen/len_24"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/action_mindtitle_view"
        android:layout_width="250.0dip"
        android:layout_height="@dimen/len_40"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/len_8"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_mindcircle"
            android:textColor="@color/action_title_color"
            android:textSize="@dimen/font_18"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/action_mindcirrcle_publish"
        android:layout_width="@dimen/len_56"
        android:layout_height="@dimen/len_56"
        android:gravity="center"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:id="@+id/action_create_btn"
            android:layout_width="@dimen/len_24"
            android:layout_height="@dimen/len_24"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:visibility="visible"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/action_mindcirrcle_message"
        android:background="@color/divider_color"/>
</RelativeLayout>